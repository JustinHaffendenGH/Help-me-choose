{
  "name": "help-me-choose-proxy",
  "version": "0.1.0",
  "private": true,
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:debug": "DEBUG_MODE=true node --inspect=0.0.0.0:9229 server.js",
    "start:debug-brk": "DEBUG_MODE=true node --inspect-brk=0.0.0.0:9229 server.js",
    "start:daemon": "nohup node server.js > proxy.log 2>&1 &",
    "start:debug-daemon": "DEBUG_MODE=true nohup node --inspect=0.0.0.0:9229 server.js > proxy.log 2>&1 &",
    "debug:chrome": "node debug-helper.js",
    "debug:full": "npm run start:debug & sleep 2 && npm run debug:chrome",
    "stop:daemon": "pids=$(lsof -ti :3000) || true; if [ -n \"$pids\" ]; then kill $pids; fi",
    "lint": "eslint scripts/*.js server.js",
    "format": "prettier --write scripts/*.js server.js",
    "test": "jest --passWithNoTests",
    "build": "npm run lint && npm run test"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsdom": "^21.1.2",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "chrome-remote-interface": "^0.33.3",
    "eslint": "^9.34.0",
    "jest": "^30.1.1",
    "prettier": "^3.6.2"
  }
}
